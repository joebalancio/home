[user]
	name = Joseph Balancio
	email = jlbalancio@gmail.com
[push]
	default = simple
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[merge]
  tool = vimdiff
[mergetool]
  prompt = false
[mergetool "vimdiff"]
  path = nvim
[mergetool "nvimdiff"]
  cmd = nvim -f -d -c 'wincmd l' "$LOCAL" "$REMOTE" "$MERGED"
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[difftool "vimdiff"]
  path = nvim
[core]
  editor = nvim
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
